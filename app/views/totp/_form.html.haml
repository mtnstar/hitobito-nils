= form_with url: users_totp_path, method: :post, class: 'form-horizontal' do |f|
  .control-group
    = f.label :totp_code, t('.totp_code'), class: 'control-label'
    .controls
      = f.text_field :totp_code, class: 'span3', autofocus: 'autofocus', placeholder: t('.totp_code_placeholder'), required: true
  .control-group
    .controls
      = f.submit(t('.submit'), class: 'btn btn-primary')
